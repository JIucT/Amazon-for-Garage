<div id="main" class="width90 align-center"> 
  <div class="float-left">
    <h4>Shop</h4>
    <div id="books_grid" class="container">
      <div class="row">
        <% @books.each_with_index do | book, index | %>
          <div class="col-sm-1 col-md-3 col-lg-4">
            <%= image_tag 'test.jpg', { class: "display-block align-center", size: '160' } %>
            <%= link_to book.title, book_path(book), { class: "text-align-center display-block" } %>
            <p class="text-align-center"> $<%= book.price %> </p>
          </div>
          <% if (index + 1) % 3 == 0 %>
            <div class="clearfix visible-md-block"></div>
          <% end %>          
        <% end %>
      </div>
    </div>
  </div>
  <ul class="list-unstyled display-inline float-right">
    <li><p class="font-size14px">SHOP BY CATEGORIES</p></li>
    <li><a href="/books/index_shop" id="main-shop-link">Mobile development</a></li>
    <li><a href="/books/index_shop" id="main-shop-link">Photography</a></li>
    <li><a href="/books/index_shop" id="main-shop-link">Web design</a></li>
    <li><a href="/books/index_shop" id="main-shop-link">Web development</a></li>    
  </ul>
</div>