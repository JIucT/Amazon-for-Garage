<div class="center-window center-window-signup">
  <header class="window-header">
    <h4>Sign up</h4>
  </header>
  <p class="alert-bookstore" id="end-of-header">
    <% devise_error_messages1!.each do |msg| %>
      <%= msg %><br/>
    <% end %>
  </p>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: "login-form", class: "form-horizontal margin-top20px", role: "form" } ) do |f| %>
    <div class="form-group">
      <%= f.label :firstname, { class: "text-align-center col-sm-4 control-label", for: "firstname" } %>
      <div class="col-sm-7">
        <%= f.text_field :firstname, { autofocus: true, type: "text", class: "form-control", id: "firstname" } %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :lastname, { class: "text-align-center col-sm-4 control-label", for: "lastname" } %>
      <div class="col-sm-7">
        <%= f.email_field :lastname, { type: "text", class: "form-control", id: "lastname" } %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, { class: "text-align-center col-sm-4 control-label", for: "email" } %>
      <div class="col-sm-7">
        <%= f.email_field :email, { type: "email", class: "form-control", id: "email" } %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, { class: "text-align-center col-sm-4 control-label", for: "password" } %>
      <div class="col-lg-7">
        <%= f.password_field :password, { autocomplete: "off", type: "password", class: "form-control", id: "password" } %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, { class: "text-align-center col-sm-4 control-label", for: "password-confirmation" } %>
      <div class="col-lg-7">
        <%= f.password_field :password_confirmation, { autocomplete: "off", type: "password", class: "form-control", id: "password-confirmation" } %>
      </div>
    </div>    

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-7">
          <div class="checkbox">
            <label>
              <%= f.check_box :remember_me %> <%= f.label :remember_me %>
            </label>
          </div>
        </div>
      </div>
    <% end %>    
    <%= link_to "Sign up with facebook", user_omniauth_authorize_path(:facebook), class: "float-left margin-left5 vertical-align-text-middle" %>
    <%= f.submit "Sign up", class: "btn btn-default float-right margin-right9", id: "submit-login" %>
  <% end %>
</div>
