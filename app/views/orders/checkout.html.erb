<!-- multistep form -->
<form id="msform">
    <!-- progressbar -->
    <h3 class="margin-bottom5">CHECKOUT</h1>
    <ul id="progressbar">
        <li class="active">ADDRESS</li>
        <li>DELIVERY</li>
        <li>PAYMANT</li>
        <li>CONFIRM</li>
    </ul>
    <!-- fieldsets -->
    <fieldset>
        <h4 >ADDRESS</h4>
        <div class="width100 text-align-center display-inline-block">
            <div class="width33 text-align-center float-left">
                <h5>BILLING ADDRESS</h5>                        
                <div id="bil-addr" class="width95 align-center">
                    <input type="text" placeholder="First name" class="form-control remove-vertical-paddings" value= "<%= @first_name %>" id="firstname" >
                    <input type="text" placeholder="Last name" class="form-control remove-vertical-paddings" value= "<%= @last_name %>" id="lastname" >
                    <input type="text" placeholder="Street address" class="form-control remove-vertical-paddings" value= "<%= @street %>" id="bill-st-addr" >
                    <input type="text" placeholder="City" class="form-control remove-vertical-paddings" value= "<%= @city %>" id="bill-city-addr" >
                    <%= render partial: "shared/countries_dropdown", locals: { country: @country } %>
                    <input type="number" placeholder="Zip code" class="form-control remove-vertical-paddings" value= "<%= @zip %>" id="bill-zip" >
                    <input type="tel" placeholder="Phone number" class="form-control remove-vertical-paddings" value= "<%= @phone_number %>" id="bill-phone" >
                </div>
            </div>
            <div class="width33 text-align-center float-left">
                <div class="width95 align-center">                
                <h5>SHIPPING ADDRESS</h5>                        
                    <div class="height34px checkbox padding-top5px">
                        <label>
                            <input type="checkbox" id="use-billing-address" placeholder="First name" class="form-control" checked> Use billing address
                        </label>
                    </div>   
                    <div id="shipping-address" class="display-none">
                        <input type="text" placeholder="First name" class="form-control remove-vertical-paddings" id="ship-firstname">
                        <input type="text" placeholder="Last name" class="form-control remove-vertical-paddings" id="ship-lastname">
                        <input type="text" placeholder="Street address" class="form-control remove-vertical-paddings" id="ship-st-addr">
                        <input type="text" placeholder="City" class="form-control remove-vertical-paddings" id="ship-city-addr">
                        <%= render partial: "shared/countries_dropdown", locals: { country: nil } %>
                        <input type="number" placeholder="Zip code" class="form-control remove-vertical-paddings" id="ship-zip">
                    </div>
                </div>                        
            </div>
            <div class="width33 text-align-center float-left">
                <h5>ORDER SUMMARY</h5>                        
                <div class="width95 align-center">
                    <p>SUBTOTAL:&nbsp;<b><%=@total%>$</b></p>
                </div>                        
            </div>                    
        </div>
        <input id="to-delivery" type="button" name="next" class="clear-both next action-button" value="Next" >            
    </fieldset>
    <fieldset>        
        <h4>DELIVERY</h4>
        <div id="delivery-type" class="text-align-left width45 display-inline-block float-left">
            <label class="display-block">
                <input type="radio" name="delivery" value="5.00" checked >UPS Ground + $5.00
            </label>
            <label class="display-block">
                <input type="radio" name="delivery" value="10.00">UPS Two Days + $10.00
            </label>
            <label class="display-block">
                <input type="radio" name="delivery" value="15.00">UPS One Day + $15.00
            </label>
        </div>
        <div class="float-right text-align-right width45 display-inline-block">
            <h4 class="margin-top0px">ORDER SUMMARY</h4>
            <p>ITEM TOTAL:&nbsp;<b class="item-price">$<%=@total%></b></p>   
            <p>SHIPPING:&nbsp;<b class="ship-price">$5.00</b></p>                                     
            <p>ORDER TOTAL:&nbsp;<b class="total-price">$<%=@total+5%></b></p>   
        </div>            
        <div class="clear-both">        </div>
        <input id="back-to-address" type="button" name="previous" class="previous action-button" value="Previous" >
        <input type="button" name="next" class="next action-button" value="Next" >        
    </fieldset>
    <fieldset>
        <h4>PAYMANT</h4>
        <div id="paymant" class="text-align-left width55 display-inline-block float-left">
            <h4 class="margin-top0px">CREDIT CARD</h4>
            <input type="text" name="credit-card" placeholder="Card Number" class="width65 form-control remove-vertical-paddings">
            <p class="margin-bottom5px">Expiration date</p>
            <select id="card-exp-month" required class="form-control float-left width45">
                <option selected disabled>Month</option>
                <option value = "01">January</option>
                <option value = "02">February</option>
                <option value = "03">March</option>
                <option value = "04">April</option>
                <option value = "05">May</option>
                <option value = "06">June</option>
                <option value = "07">July</option>
                <option value = "08">August</option>
                <option value = "09">September</option>
                <option value = "10">October</option>
                <option value = "11">November</option>
                <option value = "12">December</option> 
            </select>
            <select id="card-exp-year" required class="form-control margin-left15px float-left width30">
                <option selected disabled>Year</option> 
                <% for i in Date.today.year..(Date.today.year+15) %>
                    <option value = "<%=i%>"><%=i%></option> 
                <% end %>
            </select>             
            <div class="clear-both"></div>
            <div class="margin-top20px">
                <input type="text" name="CVC" placeholder="Card Code" autocomplete="off" class="width45 form-control float-left remove-vertical-paddings">
                <a class="margin-top7px float-left margin-left5px" id="whats-it" title="The Card Verification Code, or CVC*, is an extra code printed on your debit or credit card. With most cards (Visa, MasterCard, bank cards, etc.) it is the final three digits of the number printed on the signature strip on the reverse of your card."> What's it? </a>
            </div>
        </div>
        <div class="float-right text-align-right width45 display-inline-block">
            <h4 class="margin-top0px">ORDER SUMMARY</h4>
            <p>ITEM TOTAL:&nbsp;<b class="item-price">$<%=@total%></b></p>   
            <p>SHIPPING:&nbsp;<b class="ship-price">$5.00</b></p>                                     
            <p>ORDER TOTAL:&nbsp;<b class="total-price">$<%=@total+5%></b></p>   
        </div>            
        <div class="clear-both">        </div>
        <input type="button" name="previous" class="previous action-button" value="Previous" />
        <input type="button" name="next" id="to-confirm" class="next action-button" value="Next" />
    </fieldset>
    <fieldset>
        <h4>CONFIRM</h4>
        <div class="display-inline-block width100 text-align-left">
            <div class="float-left width24" id="shipping-address-confirm">
                <h5><b>Shipping Address</b></h5>
                <p class="name"></p>
                <p class="street"></p>
                <p class="city"></p>
                <p class="country"></p>
            </div>
            <div class="float-left width24 margin-left1" id="billing-address-confirm">
                <h5><b>Billing Address</b></h5>
                <p class="name"></p>
                <p class="street"></p>
                <p class="city"></p>
                <p class="country"></p>
                <p class="phone"></p>                
            </div>
            <div class="float-left width20 margin-left1">
                <h5><b>Shipments</b></h5>
                <p id="ship-type-conf"> </p>
            </div>
            <div class="float-left width29 margin-left1">
                <h5><b>Payment Information</b></h5>
                <p id="card-num-conf"></p>
                <p id="card-exp-conf"></p>
            </div>            
        </div>
        <hr>
        <div class="margin-top30px text-align-left">
            <%= render "shared/items_summary" %>
        </div>
        <div class="float-right">
            <p>SUBTOTAL:&nbsp;<b class="item-price">$<%=@total%></b></p>
            <p>SHIPPING:&nbsp;<b class="ship-price">$5.00</b></p>
        </div>
        <hr class="clear-both">
        <p class="float-right">ORDER TOTAL:&nbsp;<b id="price" class="total-price">$<%=@total+5%></b></p>           
        <div class="clear-both"></div>
        <input type="button" name="previous" class="previous action-button" value="Previous" />
        <input type="button" name="submit-order" class="submit action-button" value="Confirm" />
    </fieldset>
</form>

<!-- jQuery easing plugin -->
<script src="http://thecodeplayer.com/uploads/js/jquery.easing.min.js" type="text/javascript"></script>