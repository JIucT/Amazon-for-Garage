<div class="text-align-center width100 display-inline-block">
  <div class="float-left width20">
    <h5>NUMBER</h5>    
  </div>
  <div class="float-left width20">
    <h5>COMPLETED AT</h5>
  </div>
  <div class="float-left width20">
    <h5>TOTAL</h5>
  </div>

  <% orders.each do |order| %>
    <div class="clear-both"></div>
    <div class="float-left width20">
      <a><%=order.number%></a>
    </div>
    <div class="float-left width20">
      <p><%=order.completed_at%></p>
    </div>
    <div class="float-left width20">
      <p>$<%=order.total_price%></p>
    </div>  
    <div class="float-left width10">
      <%= link_to "View", order_path(order.id), { role: "button" } %>
    </div>
  <% end %>
</div>
<div class="clear-both"></div>
